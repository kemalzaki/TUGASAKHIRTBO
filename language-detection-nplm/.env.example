# Environment Configuration Example
# Copy ke .env dan sesuaikan untuk environment Anda

# Flask Configuration
FLASK_ENV=production
DEBUG=False
SECRET_KEY=change-me-in-production

# Server
PORT=5000

# Database (gunakan /tmp untuk production cloud)
DB_PATH=/tmp/predictions.db

# CORS Origins (comma-separated, * untuk dev)
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Model
MODEL_PATH=nplm-model.pth

# Production deployment notes:
# - Hugging Face Spaces: PORT=7860
# - Google Cloud Run: PORT=8080
# - PythonAnywhere: PORT=5000
# - Local: PORT=5000
